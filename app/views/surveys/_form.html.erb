<%= simple_form_for @survey, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :survey_name %>
  <br>
  <label>Introduction Text (optional):</label>
  <%= f.text_area :intro_text, :style=>'width:300px;height:100px' %>
  <br><br>
  <label>Thank You Text (optional):</label>
  <%= f.text_area :thankyou_text, :style=>'width:300px;height:100px' %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                surveys_path, :class => 'btn' %>
  </div>
<% end %>
