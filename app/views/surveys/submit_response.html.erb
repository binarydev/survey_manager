<%- model_class = Survey -%>
<div class="page-header">
  <h1><%= @survey.survey_name %></h1>
</div>

<% if !@survey.thankyou_text.blank? %>


  <%# if(params[:survey_response][:kiosk_mode] == 'true') %>
    <script type="text/javascript">
      alert("<%= @survey.thankyou_text %>");
      window.location = ('/surveys/<%= @survey.id %>/open?skip_val=<%= (params[:survey_response][:kiosk_mode] == 'true' ? '1' : '0')%>')
    </script>
    
  
  <%# else %>
  <!--
    <div>
      <h4>
      <%= @survey.thankyou_text %>
      </h4>
    </div>
    -->
  <%# end %>
<% end %>