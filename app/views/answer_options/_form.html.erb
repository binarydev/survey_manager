<%= simple_form_for @answer_option, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :option_text %>
  <%= f.input :question_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                answer_options_path, :class => 'btn' %>
  </div>
<% end %>
